#!/bin/bash 


## PACKAGE
PACKAGE="${PACKAGE} grub efibootmgr os-prober"

## DAEMONS
# RDAEMON="${RDAEMON}"


## CONFIGS
if [[ -d "$appdir/library/booter/grub/config" ]]; then
    cp -fr "$appdir/library/booter/grub/config/"* "$appdir/config/define/" &&
    echo 'GRUB_DISTRIBUTOR="'$DISTRO_NAME'"' >> "$appdir/config/define/etc/default/grub"
fi