#!/bin/bash


## PACKAGE
PACKAGE="${PACKAGE} gdm baobab gnome-shell gnome-backgrounds gnome-calculator gnome-calendar gnome-color-manager gnome-console gnome-disk-utility gnome-font-viewer gnome-keyring gnome-logs gnome-menus gnome-session gnome-control-center gnome-settings-daemon gnome-shell gnome-software gnome-system-monitor grilo-plugins gvfs gvfs-afc gvfs-dnssd gvfs-goa gvfs-google gvfs-gphoto2 gvfs-mtp gvfs-nfs gvfs-onedrive gvfs-smb gvfs-wsdd loupe nautilus papers snapshot sushi xdg-desktop-portal-gnome xdg-user-dirs-gtk"

## DAEMONS
RDAEMON="${RDAEMON} gdm"

## GLOBALS
GDAEMON="${GDAEMON} gcr-ssh-agent.socket"


## CONFIGS
if [[ -d "$appdir/library/install/deksto/gnome/config" ]]; then
    cp -fr "$appdir/library/install/deksto/gnome/config/"* "$appdir/config/define/"
fi