#!/bin/bash

## UMOUNTINGALL
if [[ ! -z $(findmnt --mountpoint /mnt) ]]; then 
    umount -R /mnt
fi


## ENVIRONTMENT
appdir=/install
export PACKAGE=""
export RDAEMON=""
export GDAEMON=""
export KERNBOT=""
export KERNMOD=""
export KERNSEC=""
export KERNPRF=""
export KERNNET=""
export KERNMSC="rw quiet"


## PREPARATION
if [[ ! -d  "$appdir/config/define/post" ]]; then 
    mkdir -p "$appdir/config/define/post"
fi

if [[ ! -e "$appdir/config/define/post/packer" ]]; then 
    touch "$appdir/config/define/post/packer"
fi
echo "#!/bin/bash" > "$appdir/config/define/post/packer";



## POPULATINGS
if [[ $1 == "--purge" ]]; then
    source "$appdir/library/installs/dialogs/terminal" &&
    start_installer
fi

if [[ $1 == "--teste" ]]; then
    cat $appdir/config/testing > $appdir/config/define/post/packer
fi

if [[ -e "$appdir/config/profile" ]]; then
    cat "$appdir/config/profile" >> $appdir/config/define/post/packer
fi 

if [[ -e "$appdir/distros/preset" ]]; then
    cat $appdir/distros/preset >> $appdir/config/define/post/packer &&
    source $appdir/config/define/post/packer
fi

if [[ -e "$appdir/library/installs/kernels/$DISTRO_KERN/preset" ]]; then
    source $appdir/library/installs/kernels/$DISTRO_KERN/preset
fi

if [[ -e "$appdir/library/installs/system/$DISTRO_SYST/preset" ]]; then
    source $appdir/library/installs/system/basisc/preset &&
    source $appdir/library/installs/system/$DISTRO_SYST/preset
else
    source $appdir/library/installs/system/basisc/preset
fi

if [[ -e "$appdir/library/installs/booter/$DISTRO_BOOT/preset" ]]; then
    source $appdir/library/installs/booter/$DISTRO_BOOT/preset
fi

if [[ -e "$appdir/library/installs/deskto/$DISTRO_DESK/preset" ]]; then
    source $appdir/library/installs/deskto/$DISTRO_DESK/preset
fi

if [[ -e "$appdir/library/installs/audios/$DISTRO_AUDI/preset" ]]; then
    source $appdir/library/installs/audios/$DISTRO_AUDI/preset
fi

if [[ -e "$appdir/library/installs/netdev/$DISTRO_NETS/preset" ]]; then
    source $appdir/library/installs/netdev/$DISTRO_NETS/preset
fi

if [[ -e "$appdir/library/installs/docust/$DISTRO_DOCS/preset" ]]; then
    source $appdir/library/installs/docust/$DISTRO_DOCS/preset
fi

if [[ -e "$appdir/library/installs/officers/$DISTRO_WORK/preset" ]]; then
    source $appdir/library/installs/officers/$DISTRO_WORK/preset
fi

if [[ -e "$appdir/library/installs/webap/$DISTRO_WAPP/preset" ]]; then
    source $appdir/library/installs/webap/$DISTRO_WAPP/preset
fi

if [[ -e "$appdir/library/installs/secure/$DISTRO_SECS/preset" ]]; then
    source $appdir/library/installs/secure/$DISTRO_SECS/preset
fi

if [[ -e "$appdir/library/installs/ucodes/preset" ]]; then
    source $appdir/library/installs/ucodes/preset
fi

if [[ -e "$appdir/library/installs/graphs/vdcard" ]]; then
    source $appdir/library/installs/graphs/vdcard
fi


if [[ -e "$appdir/distros/packer" ]]; then
    cp -fr $appdir/library/installs/syscon $appdir/config/define/post/ &&
    source $appdir/distros/packer
fi 


echo "PACKAGES='${PACKAGE}'" >> $appdir/config/define/post/packer &&
echo "RDAEMONS=(${RDAEMON})" >> $appdir/config/define/post/packer &&
echo "GDAEMONS=(${GDAEMON})" >> $appdir/config/define/post/packer &&



## DEBUG ENVIRONTMENT
#nano $appdir/config/define/packer
#exit


## LOAD PRESETS
source $appdir/config/define/post/packer &&
if [[ $MULTILIBS32 == "enable" ]]; then
    echo "[multilib]" >> /etc/pacman.conf &&
    echo "Include = /etc/pacman.d/mirrorlist" >> /etc/pacman.conf
fi


## SYSPARTED
mkfs.ext4 -F -q -b 4096 $DISKPROC &&
mount $DISKPROC /mnt &&


## BOOTINGUP
if [[ $1 == "--purge" ]]; then
    mkfs.vfat -F32 -S 4096 -n BOOT $DISKBOOT
fi
if [[ $1 == "--teste"  ]]; then
    mkfs.vfat -F32 -S 4096 -n BOOT $DISKBOOT
fi
mkdir -p /mnt/boot && 
mount -o uid=0,gid=0,dmask=007,fmask=007 $DISKBOOT /mnt/boot/ &&


## USERDATUM
if [[ $1 == "--purge" ]]; then
    mkfs.ext4 -F -q -b 4096 $DISKDATA
fi
if [[ $1 == "--teste"  ]]; then
    mkfs.ext4 -F -q -b 4096 $DISKDATA
fi

mkdir -p /mnt/home &&
mount $DISKDATA /mnt/home &&


# SETUPOACKS
pacstrap /mnt $PACKAGES


## MULTILIB
if [[ $MULTILIBS32 == "enable" ]]; then
    echo "[multilib]" >> /mnt/etc/pacman.conf &&
    echo "Include = /etc/pacman.d/mirrorlist" >> /mnt/etc/pacman.conf
fi


# CONFIGURE
genfstab -U /mnt > /mnt/etc/fstab &&
cp -fr $appdir/config/define/* /mnt/ &&
arch-chroot /mnt /bin/bash /post/syscon



# FINISHING
rm -fr /mnt/post && sleep 2 &&
read -p "Do yout want reboot now : [Y/n] " REBOOTNOW


if [[ $REBOOTNOW == Y ]]||[[ $REBOOTNOW == y ]];then
    umount -R /mnt && reboot
fi