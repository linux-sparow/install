#!/bin/bash


# decrypt file
# @1 plain file path @2 encrypted file name @3 ecnrypted file stored target path  
function encrypt_file() {
    openssl enc -aes-256-cbc -salt -in $1 -out $2.enc -k $3
}


# decrypt file
# @1 ecnrypted file path @2 decrypted file target path 
function decrypt_file() {
    openssl enc -d -aes-256-cbc -in $1 -out $2
}