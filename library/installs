#!/bin/bash

appdir=/install

## CLEANSING
if [[ ! -z $(findmnt --mountpoint /mnt) ]]; then 
    umount -R /mnt
fi
echo '' >  $appdir/config/packer


## CONFIGURE
source $appdir/config/preset

if [[ $1 == "--purge" ]]; then
    nano $appdir/config/profile &&
fi
cat $appdir/config/profile >> $appdir/config/packer

if [[ ! -z $DISTRO_DESK ]]; then
    cat $appdir/library/deskto/$DISTRO_DESK/preset >> $appdir/config/packer
fi

if [[ ! -z $DISTRO_KERN ]]; then
    cat $appdir/library/system/$DISTRO_KERN/preset >> $appdir/config/packer
fi

if [[ ! -z $DISTRO_AUDI ]]; then
    cat $appdir/library/audios/$DISTRO_AUDI/preset >> $appdir/config/packer
fi

if [[ ! -e "$appdir/library/system/sys" ]]; then
    cat $appdir/library/system/sys >> $appdir/config/packer
fi

if [[ ! -e "$appdir/config/preset" ]]; then
    cat $appdir/config/preset >> $appdir/config/packer
fi

source $appdir/config/packer
cat $appdir/config/packer





## SYSPARTED
mkfs.ext4 -F -q -b 4096 $DISKPROC &&
mount $DISKPROC /mnt &&


## BOOTINGUP
if [[ $1 == "--purge" ]]; then
    mkfs.vfat -F32 -S 4096 -n BOOT $DISKBOOT
fi
mkdir -p /mnt/boot && 
mount -o uid=0,gid=0,dmask=007,fmask=007 $DISKBOOT /mnt/boot/ &&


## USERDATUM
if [[ $1 == "--purge" ]]; then
    mkfs.ext4 -F -q -b 4096 $DISKDATA
fi
mkdir -p /mnt/home &&
mount $DISKDATA /mnt/home &&



# PROCESSOR
procieidven=$(grep "vendor_id" /proc/cpuinfo | head -n 1 | awk '{print $3}')


if [[ "$procieidven" == "GenuineIntel" ]]; then
    pacstrap /mnt intel-ucode $KERNEL_PACKAGE $SYSTEM_PACKAGE $AUDIO_PACKAGE $DESKTOP_PACKAGE $DISTRO_PACKAGE
elif [[ "$procieidven" == "AuthenticAMD" ]]; then
    pacstrap /mnt amd-ucode $KERNEL_PACKAGE $SYSTEM_PACKAGE $AUDIO_PACKAGE $DESKTOP_PACKAGE $DISTRO_PACKAGE
fi



# GRAPHICAL
graphidven=$(lspci | grep -i --color 'vga\')

if [[ ! -z $(echo $graphidven | grep -i --color 'Intel Corporation') ]];then
    pacstrap /mnt vulkan-intel
fi

if [[ ! -z $(lspci | grep -i --color '3d\|NVIDIA') ]];then
    pacstrap /mnt nvidia-utils
fi

if [[ ! -z $(lspci | grep -i --color '3d\|RADEON') ]];then
    pacstrap /mnt vulkan-radeon 
fi


# DISCONFIG
cp -fr $appdir/config /mnt/post &&
cp -fr $appdir/library/define/* /mnt &&
cp -fr $appdir/library/syscon   /mnt/post/ &&


# CONFIGURE
genfstab -U /mnt > /mnt/etc/fstab &&
arch-chroot /mnt /bin/bash /post/syscon &&



# FINISHING
rm -fr /mnt/post && sleep 2 && umount -R /mnt && reboot